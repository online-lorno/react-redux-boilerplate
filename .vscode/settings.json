{
	// Editor config
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.organizeImports": true
	},
	// ESLINT config
	"eslint.alwaysShowStatus": true,
	"eslint.format.enable": true,
	// Other config
	"[json]": {
		"editor.formatOnSave": true
	},
	"[javascriptreact]": {
		"editor.formatOnSave": true
	},
	"css.validate": false,
	"stylelint.enable": true
}
